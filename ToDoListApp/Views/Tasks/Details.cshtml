@model Entities.TaskItem

@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>

        <dt class="col-sm-2">
            Is Completed
        </dt>
        <dd class="col-sm-10">
            @Model.IsCompleted
        </dd>

        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate
        </dd>
    </dl> 
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
